#notification_bar{
  height: 50px;
  background: #efc64b;
  text-align: center;
  
  .toggleNoty {
    float: right;
    border: 2px solid black;
    border-radius: 2px;
    background: white;
    width: 30px;
    height: 30px;
    margin: 7px;
    cursor: pointer;
    
    text-align: center;
    line-height: 2;
  }
  
  &.hidden {
    display: none;
  }
  
  .notification {
    margin: 0 auto;
    padding: 15px;
    font-size: 20px;
    font-weight: bold;
  }
}