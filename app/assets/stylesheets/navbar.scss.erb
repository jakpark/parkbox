@import "navbar_mobile";

nav {
  margin: 0 auto;
  padding: 0;
  width: 1000px;
  font-size: 14px;
  height: 55px;
  background: white;
  
  display: flex;
  
  .logo {
    flex-grow: 2;
    font-size: 24px;
    text-transform: capitalize;
    margin: 10px; 
    
    img {
      max-width: 150px;
      margin: 0 auto;
    }
  }
  
  a {
    flex-grow: 1;
    cursor: pointer;
    text-align: center;
    margin: 20px;
  }
  
  a:hover {
    color: cornflowerblue;
  }
  
  .button {
    background: $green;
    border-radius: 5px;
    color: white;
    font-weight: bold;
    text-align: center;
    margin: 10px;
    line-height: 2.5;
  }

  .button:hover {
    color: initial;
    background: darkgreen;
  }
}

.nav-wrapper {
  height: 55px;
}

#navbar {  
  border-bottom: 1px solid #cccccc;
  
  &.fixed {
    position: fixed;
    top: 0;
    width: 100%;
    background: white;
  }
}