@import "colors"; 

nav {
  margin: 0 auto;
  padding: 10px 0;
  width: 1000px;
  font-size: 14px;

  display: flex;
  
  .logo {
    flex-grow: 2;
    font-size: 24px;
    text-transform: capitalize;
    
    img {
      max-width: 150px;
      margin: 0 auto;
    }
  }
  
  .button {
    background: $green;
    border-radius: 5px;
    color: white;
    font-weight: bold;
    text-align: center;
  }
  
  span {
    flex-grow: 1;
    cursor: pointer;
    text-align: center;
  }
  
  a:hover, span:hover {
    color: cornflowerblue;
  }
  
  .button:hover {
    color: initial;
    background: darkgreen;
  }
}