nav {
  margin: 0 auto;
  padding: 20px 0;
  width: 1000px;

  display: flex;
  
  .logo {
    flex-grow: 2;
    font-size: 24px;
    text-transform: capitalize;
    
    img {
      max-width: 150px;
    }
  }
  
  .button {
    background: lightgreen;
  }
  
  span {
    flex-grow: 1;
    cursor: pointer;
  }
  
  span:hover {
    color: cornflowerblue;
  }
  
  .button:hover {
    color: initial;
    background: darkgreen;
  }
}