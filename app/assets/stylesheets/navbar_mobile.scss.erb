@import "colors"; 
@media only screen and (max-width: 768px) {
  nav {
    a {
      margin: 10px 15px;
      &.logo {
        margin: 15px 35px;
        max-width: 125px;
      }
    
      &.btn {
        padding: 10px 0;
        line-height: 1;
        max-width: 80px;
      }
    }
    .mobile-visible {
      display: block;
    }
  }
  
  .mobile-hidden {
    display: none;
  }
  
  
  .icon {
    max-width: 40px;
  }
  
  .btn-nav {
    margin: 10px;
  }
}