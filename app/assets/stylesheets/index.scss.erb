@import "index_mobile";

main {
  margin: 0 auto;
  // width: 1000px;
  
  h1 {
    font-size: 36px;
    text-align: center;
  }
  
  .wrapper {
    width: 100%;
    background-color: $skyblue;
    border-top: 2px solid #cccccc;
  }
  
  section {
    width: 1000px;
    margin: 20px auto;
  }
}

#hero {
  display: flex;
  
  h2 {
    font-size: 20px;
    font-weight: bold;
    margin: 30px;
    text-align: center;
  }
  
  .left {
    max-width: 400px;
    flex: 1 0 40%;
    
    div {
      margin: 20px auto;
    }
  }
  
  
  .hero_container {
    flex: 1 0 60%;
    background: url(asset-path('hero_pup.png'));
    background-size: contain;
    background-repeat: no-repeat;
    width: 100%;
    height: 300px;
  }
  
  .button_cta {
    text-transform: uppercase;
    padding: 10px;
    background: $green;
    color: white;
    font-weight: bold;
    font-size: 14px;
    text-align: center;
    
    
    margin: 10px;
    width: 200px;
    border-radius: 10px;
    cursor: pointer;
    
    &:hover {
      background: darkgreen;
    }
    
    &.last {
      background: cornflowerblue;
      
      &:hover {
        background: navy;
      }
    }
  }
  
  
}

#how_parkbox_works {
  
  .how_stories {
    margin: 20px;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;

    .trio {
      flex: 1 0 33%;
      min-width: 50px;
      text-align: center;
      
      img {
        max-width: 200px;
        margin: 0 auto;
      }
    }
    
    .cta {
      flex: 0 1 100%;
      display: block;
      margin: 10px;
      text-align: center;
      
      a {
        background: $green;
        border-radius: 10px;
        padding: 5px;
        color: white;
        font-weight: bold;
        margin: 20px auto;
        display: block;
        width: 200px;
      }
      .button {
        text-align: center;
      }
    }
  }
}