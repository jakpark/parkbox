main {
  margin: 0 auto;
  width: 1000px;
  
  h1 {
    font-size: 36px;
  }
  
  #hero {
    background-color: lightblue;
    
    .hero_container {
      background: url(asset-path('hero_pup.png'));
      background-size: contain;
      background-repeat: no-repeat;
      width: 100%;
      height: 0;
      padding-top: 66.64%;
    }
    
    .button_cta {
      text-transform: capitalize;
      padding: 10px;
      background: lightgreen;
    }
  }
  
  #how_parkbox_works {
    margin: 20px 0;
    
    .how_stories {
      margin: 20px;
      display: flex;
    
      p {
        flex: 1;
        border: 1px solid red;
        min-width: 50px;
      }
      
      .cta {
        display: block;
        
        button {
          background: lightgreen;
          border-radius: 10px;
          padding: 5px;
        }
      }
    }
  }
}