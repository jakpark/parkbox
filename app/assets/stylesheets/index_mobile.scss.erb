@import "colors"; 

@media only screen and (max-width: 768px) {
  nav, section {
    max-width: 100%;
  }
  
  main {
    section{
      margin: 0px auto;
      
    }
    
    .wrapper {
      background-color: inherit;
    }
  }
  
  #hero {
    flex-direction: column;
    div.left {
      order: 2;
      max-width: initial;
      background: white;
          
      .button_cta {
        width: 200px;
        text-align: center;
      }
    }
    
    div.hero_container {
      height: 200px;
      background-color: $skyblue;
    }
  }
  
  section#how_parkbox_works {
    .how_stories {
      flex-direction: column;
      
      div.trio {
        flex: 1;
      }
    }
  }
}